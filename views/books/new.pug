include ../includes/head.pug
block header
.container
  h2.page-header New Book
  block error_handle
  form(action="/books" method="POST")
    .form-row
      div.form-item
        block title
      div.form-item
        block author
    .form-row
      div.form-item
        block publish_date
      div.form-item
        block page_count
    .form-row
      div.form-item-no-grow
        block cover
      div.form-item
        block description
    .form-row.btn-row.form-row-end
      a(href="/books").btn.btn-danger Cancel
      button(type="submit").btn.btn-primary Create
