extends books/new.pug
block header
  include includes/header.pug

block form_field
  div
    label Title
    input(type="text" name="title" value= book.title)
  div
    label Author
    select(name="author")
      each author in authors
        if author.id === book.author
          option(selected value= author.id)= author.name
        else
          option(value= author.id)= author.name

block publish_date
  label Publish Date 
  input(type="date" name="publishDate" value= !book.publishDate ? "": book.publishDate.toISOString())

block page_count
  label Page Count
  input(type="number" name="pageCount" value= book.pageCount min="1")

block cover
  label Cover
  input(type="file" name="cover")

block description
  label Description
  textarea(name="description")= book.description

block error_handle
  include includes/errorHandling.pug