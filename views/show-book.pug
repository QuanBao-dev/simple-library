extends books/show
include includes/formMethod
block header
  include includes/header
block content
  h2.page-header= book.title
  img(src=book.coverImagePath height="150" width="100") 
  div
    | Author: #{book.author.name}
  div
    | Publish Date: #{book.publishDate.toDateString()}
  div
    | Page Count: #{book.pageCount}
  div
    | Description: #{book.description}
  a(href="/books/"+book.id+"/edit") Edit
  +formMethod("/books/" + book.id + "?_method=DELETE")
  a(href="/authors/"+book.author.id) View Author